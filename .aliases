# --------------------------------------------------
# Shortcuts
# --------------------------------------------------

alias ch='history | grep "git commit"'
alias hg='history | grep'

# --------------------------------------------------
# Detect which `ls` flavor is in use
# --------------------------------------------------

if ls --color >/dev/null 2>&1; then
    # GNU ls
    colorflag="--color=auto"
else
    # BSD / macOS ls
    colorflag="-G"
fi


# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -lahF"

# Long listing (no dotfiles)
alias ll="ls -lhF"

# macOS colors
export LSCOLORS='Dxexcxdxcxegedabagacad'

# GNU coreutils colors (Linux / gnu-ls)
export LS_COLORS='no=00:fi=00:di=04;35:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# --------------------------------------------------
# Always enable colored grep output
# --------------------------------------------------

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# --------------------------------------------------
# Homebrew update helper
# --------------------------------------------------

alias update_brew='brew update && brew upgrade && brew upgrade --cask && brew cleanup && \
command -v npm >/dev/null && npm update --global; \
command -v pipx >/dev/null && pipx upgrade-all; \
command -v uv >/dev/null && uv tool upgrade --all; \
command -v gh >/dev/null && gh extension upgrade gh-copilot'

# --------------------------------------------------
# Finder hidden files
# --------------------------------------------------

alias show='defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder'
alias hide='defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder'

# --------------------------------------------------
# Find helpers
# --------------------------------------------------

alias fd='find . -type d -iname'
alias ff='find . -type f -iname'

# --------------------------------------------------
# Utility scripts
# --------------------------------------------------

alias compress="$HOME/dotfiles/utils/compress_video.sh"
alias dedup="$HOME/dotfiles/utils/dedup_backup.sh"

# Delete .DS_Store files recursively with verbose output
alias rmds='find . -type f -name ".DS_Store" -print -delete'

# --------------------------------------------------
# Function-style aliases (converted to real functions)
# --------------------------------------------------

find_dirs_by_name() {
    echo "Searching in: $1"
    find "$1" -type d -name "$2" -exec realpath {} \;
}

find_like_dirs_by_name() {
    echo "Searching in: $1"
    find "$1" -type d -iname "*$2*" -exec realpath {} \;
}

find_files_by_name() {
    echo "Searching in: $1"
    find "$1" -type f -name "$2" -exec realpath {} \;
}

find_like_files_by_name() {
    echo "Searching in: $1"
    find "$1" -type f -iname "*$2*" -exec realpath {} \;
}

